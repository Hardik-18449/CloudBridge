<%- include ("includes/header", {
    title: "Login",
}) %>

<div class="container d-flex justify-content-center align-items-center " style="margin-top: 150px;">
    <div class="col-md-6 col-lg-4">
        <%- include ("includes/ResponseAlert", {
            request: request
        }) %>

        <div class="card p-4 shadow-sm" style="background-color: rgba(225, 225, 225, 0.1); border: none;">
            <h3 class="text-center mb-4" style="color: aliceblue; ">Login</h3>
            <form action="<%= request.mainURL %>/Login" method="post">
                <div class="form-group mb-3">
                    <label style="color: aliceblue; font-size: large;">Email</label>
                    <input type="email" name="email" placeholder="Enter email" class="form-control" required />
                </div>

                <div class="form-group mt-1 mb-3" >
                    <label style="color: aliceblue; font-size: large;">Password</label>
                    <input type="password" name="password" placeholder="Enter password" class="form-control" required />
                </div>

                <div class="text-center">
                    <input type="submit" value="Login" class="btn btn-primary w-100" />
                </div>
            </form>

            <div class="text-center mt-3" >
                <a href="<%= request.mainURL %>/ForgotPassword"  style="color: aliceblue; font-size: large;">Forgot Password?</a>
            </div>
        </div>
    </div>
</div>

<%- include ("includes/footer") %>
