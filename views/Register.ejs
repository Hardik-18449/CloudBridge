<%- include("includes/header", {
    "title":"Register"
})%>

<div class="container d-flex justify-content-center align-items-center" style="margin-top: 150px;">
    <div class="col-md-6 col-lg-4">
        <%- include("includes/ResponseAlert", {
            request: request
        }) %>

        <div class="card p-4 shadow-sm" style="background-color: rgba(225, 225, 225, 0.1); border: none;">
            <h3 class="text-center mb-4" style="color: aliceblue;">Register</h3>
            <form action="<%= request.mainURL %>/register" method="post">
                <div class="form-group mb-3">
                    <label style="color: aliceblue; font-size: large;">Name</label>
                    <input type="text" placeholder="Enter name" name="name" class="form-control" required />
                </div>

                <div class="form-group mb-3">
                    <label style="color: aliceblue; font-size: large;">Email</label>
                    <input type="email" placeholder="Enter email" name="email" class="form-control" required />
                </div>

                <div class="form-group mb-3">
                    <label style="color: aliceblue; font-size: large;">Password</label>
                    <input type="password" placeholder="Enter Password" name="password" class="form-control" required />
                </div>

                <div class="text-center">
                    <input type="submit" value="Register" class="btn btn-primary w-100" />
                </div>
            </form>

            <div class="text-center mt-3">
                <a href="<%= request.mainURL %>/Login" style="color: aliceblue; font-size: large;">Already have an account? Login</a>
            </div>
        </div>
    </div>
</div>

<%- include("includes/footer") %>
